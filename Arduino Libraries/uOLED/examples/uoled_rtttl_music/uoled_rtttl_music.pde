void loop(void)
{  
  if (millis()- buttontimer > lastButtonCheck)
  {
    lastButtonCheck = millis();
    Serial1.write(0x4a);
    Serial1.write(0x07);
    while (Serial1.available() < 1) {}
    
    byte i = Serial1.read();
      switch (i) {
      case 0:
        break;
      case 1:
//      Serial.println("UP");
        songnumber++;
        Serial.println(songnumber, DEC);
        uoled.Text(5, 7, LARGE_FONT, 0xFFFF, "     ", 1);
        uoled.Text(5, 7, LARGE_FONT, 0xFFFF, itoa(songnumber, buffer, 10), 1);
        break;
      case 2:
        Serial.println("LEFT");
        break;
      case 3:
//      Serial.println("DOWN");
