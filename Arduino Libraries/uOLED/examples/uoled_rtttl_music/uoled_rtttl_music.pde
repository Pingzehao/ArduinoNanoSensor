        Serial.println(songnumber, DEC);
        uoled.Text(5, 7, LARGE_FONT, 0xFFFF, "     ", 1);
        uoled.Text(5, 7, LARGE_FONT, 0xFFFF, itoa(songnumber, buffer, 10), 1);
        break;
      case 4:
        Serial.println("RIGHT");
        break;
      case 5:
